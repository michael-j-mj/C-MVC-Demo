@model VideoGameStatsDemo.Models.GameConsole

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>    @Html.DisplayFor(model => model.ConsoleName)</h4>
    <hr />
   <img src="/image/@(Model.ConsoleName).jpg">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConsoleSold)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConsoleSold)
        </dd>
    </dl>
</div>
<div id="GameList">
<div>
    <div class="d-flex bg-success text-white  mt-3">
    <div class="p-2" style="flex:0 0 35%">
        @Html.DisplayNameFor(model => model.Games.FirstOrDefault().Name)
    </div>


    <div class="p-2" style="flex:0 0 20%">
        @Html.DisplayNameFor(model => model.Games.FirstOrDefault().Value)
    </div>
    <div class="p-2" style="flex:0 0 25%">Options</div>
</div>
      @foreach (var item in Model.Games) {
            <div class="d-flex">
           
             <div class="p-1" style="flex:0 0 35%">
                   <a  asp-action="Details" asp-route-controller="games" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Name)
                         </a> 
            </div>
   
             <div class="p-1" style="flex:0 0 20%">
                @Html.DisplayFor(modelItem => item.Value)
           </div>
  
   
             <div class="p-1" style="flex:0 0 25%">
                 
                        <a  asp-action="Details" asp-route-controller="games" asp-route-id="@item.Id">
                           Details 
                            </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                            <a asp-action="Create"> | Create New | </a>
                        <a asp-action="Edit" asp-route-controller="games" asp-route-id="@item.Id">Edit|</a>
                    <a asp-action="Delete"  asp-route-controller="games" asp-route-id="@item.Id">Delete</a>
                    }
              </div>
        </div>
        }
        </div>
    <a asp-action="Edit" asp-route-id="@Model?.ConsoleName">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
